<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javaone.assistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.javaone.assistant.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.javaone.assistant.home.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.javaone.assistant.todo.ListToDoActivity"
            android:label="@string/title_activity_to_do_list" >
        </activity>
        <activity
            android:name="com.javaone.assistant.todo.AddTodoActivity"
            android:label="@string/title_activity_add_todo" >
        </activity>
        <activity
            android:name="com.javaone.assistant.todo.UpdateTodoActivity"
            android:label="@string/title_activity_update_todo" >
        </activity>
        <activity
            android:name="com.javaone.assistant.chatter.Chat2Activity"
            android:label="@string/title_activity_chat2" >
        </activity>
    </application>

</manifest>
